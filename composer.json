{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "8.4.*",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "symfony/asset": "7.2.*",
        "symfony/console": "7.2.*",
        "symfony/dotenv": "7.2.*",
        "symfony/expression-language": "7.2.*",
        "symfony/flex": "^2",
        "symfony/form": "7.2.*",
        "symfony/framework-bundle": "7.2.*",
        "symfony/http-client": "7.2.*",
        "symfony/intl": "7.2.*",
        "symfony/mime": "7.2.*",
        "symfony/property-access": "7.2.*",
        "symfony/runtime": "7.2.*",
        "symfony/security-bundle": "7.2.*",
        "symfony/serializer": "7.2.*",
        "symfony/stopwatch": "7.2.*",
        "symfony/twig-bundle": "7.2.*",
        "symfony/validator": "7.2.*",
        "symfony/yaml": "7.2.*",
        "twig/extra-bundle": "^2.12|^3.0",
        "twig/twig": "^2.12|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11",
        "symfony/browser-kit": "7.2.*",
        "symfony/css-selector": "7.2.*",
        "symfony/phpunit-bridge": "^7.2"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "bump-after-update": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "DemoBundle\\": "bundles/DemoBundle"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "cache-clear":[
            "rm -rf var/cache/*"
        ],
        "all": [
            "@cache-clear",
            "bin/phpunit tests/ --stop-on-failure --stop-on-error"
        ],
        "topic1": [
            "@cache-clear",
            "bin/phpunit tests/Topic1/ --stop-on-failure --stop-on-error"
        ],
        "topic2": [
            "@cache-clear",
            "bin/phpunit tests/Topic2/ --stop-on-failure --stop-on-error"
        ],
        "topic3": [
            "@cache-clear",
            "bin/phpunit tests/Topic3/ --stop-on-failure --stop-on-error"
        ],
        "topic4": [
            "@cache-clear",
            "bin/phpunit tests/Topic4/ --stop-on-failure --stop-on-error"
        ],
        "topic5": [
            "@cache-clear",
            "bin/phpunit tests/Topic5/ --stop-on-failure --stop-on-error"
        ],
        "topic6": [
            "@cache-clear",
            "bin/phpunit tests/Topic6/ --stop-on-failure --stop-on-error"
        ],
        "topic7": [
            "@cache-clear",
            "bin/phpunit tests/Topic7/ --stop-on-failure --stop-on-error"
        ],
        "topic8": [
            "@cache-clear",
            "bin/phpunit tests/Topic8/ --stop-on-failure --stop-on-error"
        ],
        "topic9": [
            "@cache-clear",
            "bin/phpunit tests/Topic9/ --stop-on-failure --stop-on-error"
        ],
        "topic10": [
            "@cache-clear",
            "bin/phpunit tests/Topic10/ --stop-on-failure --stop-on-error"
        ],
        "topic11": [
            "@cache-clear",
            "bin/phpunit tests/Topic11/ --stop-on-failure --stop-on-error"
        ],
        "topic12": [
            "@cache-clear",
            "bin/phpunit tests/Topic12/ --stop-on-failure --stop-on-error"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.2.*"
        }
    }
}
